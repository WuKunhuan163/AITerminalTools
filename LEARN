#!/usr/bin/env python3
"""
LEARN 命令入口脚本
"""

import sys
import os
from pathlib import Path

# 直接调用LEARN.py
script_dir = Path(__file__).parent
learn_py = script_dir / "LEARN.py"

if learn_py.exists():
    # 执行LEARN.py并传递所有参数
    os.execv(sys.executable, [sys.executable, str(learn_py)] + sys.argv[1:])
else:
    print(f"错误：找不到LEARN.py文件: {learn_py}", file=sys.stderr)
    sys.exit(1) 