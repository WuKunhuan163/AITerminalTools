#!/usr/bin/env python3
"""
IMG2TEXT Tool - Main Executable
图片转文字描述工具的主可执行文件
"""

import os
import sys
from pathlib import Path

# 直接调用IMG2TEXT.py
script_dir = Path(__file__).parent
img2text_py = script_dir / "IMG2TEXT.py"

if img2text_py.exists():
    # 执行IMG2TEXT.py并传递所有参数
    os.execv(sys.executable, [sys.executable, str(img2text_py)] + sys.argv[1:])
else:
    print(f"错误：找不到IMG2TEXT.py文件: {img2text_py}", file=sys.stderr)
    sys.exit(1)
