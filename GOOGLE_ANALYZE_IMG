#!/usr/bin/env python3
"""
GOOGLE_ANALYZE_IMG Tool - Main Executable
Google图片分析工具的主可执行文件
"""

import os
import sys
from pathlib import Path

# 添加项目文件夹到系统路径
TOOL_DIR = Path(__file__).parent / "GOOGLE_ANALYZE_IMG_PROJ"
if str(TOOL_DIR) not in sys.path:
    sys.path.insert(0, str(TOOL_DIR))

# 导入并运行主程序
try:
    from google_image_analyzer import main
    main()
except ImportError as e:
    print(f"错误：无法导入Google图片分析工具: {e}", file=sys.stderr)
    print(f"请确保项目文件夹存在: {TOOL_DIR}", file=sys.stderr)
    sys.exit(1)
except Exception as e:
    print(f"运行时错误: {e}", file=sys.stderr)
    sys.exit(1)
